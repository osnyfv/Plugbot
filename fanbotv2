// fanback,fanroom,fanjoiners,autounfan,fanmessages
API.on(API.CHAT_COMMAND, callback);

instructions();
function instructions() {
API.chatLog("---------------------LISTA-DE-COMANDOS-------------------", true);
API.chatLog("/autofan vira fan de quem virar fsn de você.", false);
API.chatLog("/fandetodos vira fan de todos da sala.", false);
API.chatLog("/fannovos vira fan de quem entra na sala.", false);
API.chatLog("/autounfan deixa de ser fan.", false);
API.chatLog("/automensagem mensagem a cada 10 minutos, pedindo fans.", false);
API.chatLog("/comandos para ver essa mensagem novamente.", false);
API.chatLog("--------REPITA-O-COMANDO-PARA-DESATIVAR--------", true);
}


var fanbackV = false,
    fanjoinersV = false,
    autounfanV = false,
    fanmessagesV = false;

function callback(value) {
    var len = value.length;
    var sub = value.substring(1, len);
	console.log(sub);
    switch (sub) {
    case "autofan":
        fanback();
        break;
    case "fandetodos":
        fanroom();
        break;
    case "fannovos":
        fanjoiners();
        break;
    case "autounfan":
        autounfan();
        break;
    case "automensagem":
        fanmessages();
        break;
	case "comandos":
        instructions();
        break;
    default:
        break;
    }
}

function fanback() {
    if (fanbackV === false) {
        fanbackV = true;
        API.chatLog("Auto Fan está online, e retribuira qualquer um que virar seu fan.", false);
    } else if (fanbackV === true) {
        fanbackV = false;
        API.chatLog("Auto Fan está offline, não vai mais ser fan daqueles que você forem seu fan.", false);
    }
}

function fanroom() {
	var fanned=[];
    var users = API.getUsers();
    for (var i = 0; i < users.length; i++) {
		var user=users[i].id;
        var relationship = require('app/models/TheUserModel');
		
			if (relationship.getRelationship(user) < 2) {
            var fan = require('app/services/user/UserFanService');
            fan = new fan(true,user);
			fanned.push(user);
        }
    }
    API.chatLog("voce é fan de todos da sala.", false);

    if (autounfanV === true) {
        setTimeout(function () {
            for (var i = 0; i < fanned.length; i++) {
                    var fan = require('app/services/user/UserFanService');
                    fan = new fan(false,fanned[i]);
            }
        }, 60000);
        API.chatLog("Voce não é mais fã de ninguem da sala.", false);
    }
}

function fanjoiners() {
    if (fanjoinersV === false) {
        fanjoinersV = true;
        API.chatLog("FanNovos está online, você vai ser fan de quem entra na sala.", false);
    } else if (fanjoinersV === true) {
        fanjoinersV = false;
        API.chatLog("FanNovos está offline, você não será fan de quem entra na sala.", false);
    }
}

function autounfan() {
	if (autounfanV === false) {
        autounfanV = true;
        API.chatLog("Auto Unfan está online, você deixa de ser, dos próximos usuários", false);
} else 
    if (autounfanV === true) {
        autounfanV = false;
        API.chatLog("Auto Unfan está offline, Você não deixa de ser fan, dos próximos usuários", false);
    }
}

function fanmessages() {
    if (fanmessagesV === true) {
        fanmessagesV = false;
		API.chatLog("Auto Mensagens está offline, mensagens pedindo fans não ocorrerá.", false);
} else 
    if (fanmessagesV === false) {
        fanmessagesV = true;
		API.chatLog("Auto Mensagens está online, mensagens pedindo fans agora ocorrerá a cada 10 minutos", false);
    }
}

API.on(API.USER_FAN, fanFanners);

function fanFanners(data) {
    if (fanbackV === true) {
        fanFannersAndSomeoneJoinedFan(data);
    }
}

API.on(API.USER_JOIN, someoneJoined);

function someoneJoined(data) {
    if (fanjoinersV === true) {
        fanFannersAndSomeoneJoinedFan(data);
    }
}

function fanFannersAndSomeoneJoinedFan(data) {
	
    var id = data.id;
	var usersObject=API.getUser(id);
	var relationship = require('app/models/TheUserModel');
		
	if (relationship.getRelationship(id) < 2) {
    var fan = require('app/services/user/UserFanService');
    fan = new fan(true, id);
	}

    if (autounfanV === true) {
        setTimeout(function () {
            var fan = require('app/services/user/UserFanService');
            fan = new fan(false, id);
        }, 10000);
    }
}

function message() {
    var m, msgs;
    msgs = ["Fan 4 Fan automatic, just fan me!", "FAN POR FAN GOGOGO VIRE MEU FÃ"];
    m = Math.floor(Math.random() * msgs.length);
    API.sendChat(msgs[m]);
}

var messages = setInterval(function () {
    if (fanmessagesV === true) {
        message();
    }
}, 600000);
